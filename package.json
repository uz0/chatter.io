{
  "name": "chatter.io",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uz0/chatter.io"
  },
  "author": "dcversus <dcversus@gmail.com>",
  "jest": {
    "setupFiles": [
      "./jestSetup.js"
    ],
    "testURL": "http://localhost:5000",
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "preset": "jest-puppeteer"
  },
  "dependencies": {
    "autoprefixer": "^6.3.7",
    "babel": "^6.23.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.0.0",
    "babel-plugin-module-resolver": "^3.1.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "classnames": "^2.2.6",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "gh-pages": "^2.0.1",
    "html-webpack-plugin": "^3.2.0",
    "i18next": "^14.0.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "normalize.css": "^8.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-i18next": "^9.0.9",
    "react-portal": "^4.2.0",
    "react-redux": "^6.0.0",
    "react-router": "^3.0.5",
    "recompose": "^0.30.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "chai": "^4.0.2",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "eslint": "^4.1.0",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^6.3.0",
    "expect-puppeteer": "^3.5.1",
    "file-loader": "^0.9.0",
    "http-server": "^0.11.1",
    "jest": "^24.1.0",
    "jest-cli": "^23.6.0",
    "jest-config": "^23.6.0",
    "jest-puppeteer": "^3.5.2",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^0.13.0",
    "preact-jsx-chai": "^2.2.1",
    "puppeteer": "^1.12.2",
    "reselector": "^0.12.0",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.1"
  },
  "scripts": {
    "test": "npm run build && npm-run-all --parallel serve jest",
    "serve": "http-server build",
    "start": "webpack-dev-server --history-api-fallback --host 0.0.0.0 --hot --inline --progress",
    "jest": "jest --coverage",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack -p",
    "postbuild": "npm run copy",
    "clean": "rimraf build",
    "copy": "ncp public build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  }
}
